<h1 class="conversation-heading">Chatting with <%= @conversation.with(current_user).name %></h1>

<div id="conversation-main">
	<div id="conversation-body">
	<div id="message-table">
		 <%= render @conversation.personal_messages.last(2) %>
	</div>

<div id="conversation-profile" class="col-md-4">
        <div class="card card-user">
            <div class="image">
                <img src="https://ununsplash.imgix.net/photo-1431578500526-4d9613015464?fit=crop&fm=jpg&h=300&q=75&w=400" alt="..."/>
            </div>
            <div class="content">
                <div class="author">
                     <a href="#">

<%= image_tag @user.avatar_url.to_s, {:class => "avatar border-gray"} %>
                      <h4 class="title"><%= current_user.username %> <br />
                         <small><%= current_user.email %></small>
                      </h4>
                    </a>
                </div>
                <br/>
                <p class="description text-center"> "Lamborghini Mercy <br>
                                    Your chick she so thirsty <br>
                                    I'm in that two seat Lambo"
                </p>
              <small><center>  member since <%= Time.now.day - @user.created_at.day %> days ago </small></center>
            </div>
            <hr>
            <div class="text-center">
                <button href="#" class="btn btn-simple"><i class="fa fa-facebook-square fa-lg"></i></button>
                <button href="#" class="btn btn-simple"><i class="fa fa-twitter fa-lg"></i></button>
                <button href="#" class="btn btn-simple"><i class="fa fa-google-plus-square fa-lg"></i></button>
<button href="#" class="btn btn-simple"><i class="fa fa-linkedin fa-lg"></i></button>
            </div>
        </div>
    </div>




	<%= form_for(@personal_message, remote: true) do |f| %>
		<%= hidden_field_tag 'conversation_id', @conversation.id %>
		<%= f.text_area :body %>
		<div class="msg_input">
		<%= f.submit 'Send', class: 'btn btn-success' %>
		</div>
	<% end %>
</div>