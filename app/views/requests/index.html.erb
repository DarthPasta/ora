    							<div class="product sf-dress clearfix">

    									<!-- <div class="sale-flash"></div> -->

    							<div class="product-desc-zoe center">
    									<div class = "row"> <div class="product-title"> 	<a href= "/requests/<%=request.id%>"> <h3> <%= request.title %></h3></a> <h5><%= request.request_description %></h5> </div></div>
    									<div class = "row">
                        <div class="product-price"><%= request.token %> <%= image_tag('ora-coin.png', height:'20px')%> / unit <br/>
                        <a href="/users/<%= request.user.id %>"><h5>  <%= image_tag ('seed_avatar.png'), {:class => "product-title-avatar"} %> <%= request.user.username %></h5></a>
	</div>	</div>	</div>
    								</div>

  <% end %>

    							</div>
